<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5" method="upgrade">
	<name>JNews</name>
	<creationDate>19/04/2017</creationDate>
	<author></author>
	<authorEmail></authorEmail>
	<authorUrl></authorUrl>
	<copyright></copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<version>1.0.0</version>
	<description>Joomla news component</description>

	
	<install>
		<sql>
			<file driver="mysql" charset="utf8">install/sql/install.mysql.utf8.sql</file>
		    <file driver="mysqli" charset="utf8">install/sql/install.mysql.utf8.sql</file>
		</sql>
	</install>

	<uninstall>
		<queries />
	</uninstall>

	<files folder="site">
		<filename>index.html</filename>
		<filename>jnews.php</filename>
		<filename>controller.php</filename>
		
		
		<folder>models</folder>	
		<folder>views</folder>	
	</files>
 
	

	<administration>
		<menu img="" view="jnews">JNews</menu>
		<submenu>
			<menu view="jnews" img="class:jnews-news" link="view=news">news</menu>
			
		</submenu>

		<files folder="administrator">
			
			<folder>install</folder>
			
		</files>
	
		
	</administration>
	
</extension>